<mvc:View controllerName="mii.employee.controller.App"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<!--your code starts here-->

	<form:SimpleForm layout="GridLayout">
		<form:content>
			<Label text="Employee Name" class="sapUiSmallMarginTop" />
			<Input width="20%" value="{employee>/userName}" />

			<Label text="Employee Id" class="sapUiSmallMarginTop" />
			<Input width="20%" value="{employee>/id}" type="Number" />
		</form:content>

	</form:SimpleForm>
	<Button text="Add User" press=".addEmployee" class="sapUiResponsiveMargin" />

	<List items="{/Rowsets/Rowset/0/Row}" id="employeeList">
		<CustomListItem>
			<VBox>
				<form:SimpleForm>
					<form:content>
						<Label text="Employee ID" />
						<Text text="{EmpId}"></Text>

						<Label text="Employee Name" />
						<Text text="{FirstName}"></Text>

						<Label text="first name" />
						<Text text="{FirstName}"></Text>
					</form:content>
				</form:SimpleForm>
			</VBox>
		</CustomListItem>
	</List>
	<!--your code ends here-->
</mvc:View>